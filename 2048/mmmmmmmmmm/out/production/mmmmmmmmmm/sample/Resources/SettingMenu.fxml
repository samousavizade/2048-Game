<AnchorPane prefHeight="500.0" prefWidth="500.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.SettingMenu">
   <children>
      <Button fx:id="SubmitSettingMenu" layoutX="175.0" layoutY="286.0" mnemonicParsing="false" onMouseClicked="#submitAccountChangesInformation" onMouseEntered="#onEnterButtonAction" onMouseExited="#onExitButtonAction" prefHeight="150.0" prefWidth="150.0" style="-fx-background-radius: 200; -fx-background-color: rgba(253, 214, 43, 1);" text="Submit">
         <font>
            <Font name="Segoe Print Bold" size="30.0" />
         </font>
      </Button>
      <TextField fx:id="NewPasswordSettingMenu" alignment="CENTER" layoutX="158.0" layoutY="102.0" onKeyTyped="#changePassword" prefHeight="31.0" prefWidth="184.0" promptText="Enter Passwrod!">
         <effect>
            <InnerShadow blurType="GAUSSIAN" choke="0.35" color="#fdd62b" />
         </effect>
      </TextField>
      <TextField fx:id="NewUsernameSettingMenu" alignment="CENTER" layoutX="158.0" layoutY="45.0" onKeyTyped="#changeUserName" prefHeight="31.0" prefWidth="184.0" promptText="Enter Username:">
         <effect>
            <InnerShadow blurType="GAUSSIAN" choke="0.35" color="#fdd62b" />
         </effect>
      </TextField>
      <Pagination fx:id="RowNumberHandlerSettingMenu" currentPageIndex="4" layoutX="149.0" layoutY="194.0" maxPageIndicatorCount="6" pageCount="6" prefHeight="39.0" prefWidth="202.0" style="-fx-background-color: black; -fx-border-style: solid; -fx-border-color: rgba(253, 214, 43, 1);">
         <effect>
            <Glow level="0.2" />
         </effect>
      </Pagination>
      <Label layoutX="210.0" layoutY="175.0" prefHeight="18.0" prefWidth="80.0" text="Row Number :" textFill="WHITE" />
   </children>
</AnchorPane>
